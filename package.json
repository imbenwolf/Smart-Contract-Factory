{
  "name": "smart-contract-factory",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "ethereum": "yarn ganache-cli",
    "migrate": "yarn lint:solidity && yarn truffle migrate",
    "lint:vue": "vue-cli-service lint",
    "lint:solidity": "solhint contracts/**/*.sol"
  },
  "dependencies": {
    "ant-design-vue": "^1.3.7",
    "vue": "^2.6.6",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.5.0",
    "@vue/cli-plugin-eslint": "^3.5.0",
    "@vue/cli-service": "^3.5.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-import": "^1.11.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "fibers": "^3.1.1",
    "ganache-cli": "^6.4.1",
    "less": "^2.7.3",
    "less-loader": "^4.1.0",
    "lint-staged": "^8.1.4",
    "prettier-plugin-solidity": "^1.0.0-alpha.21",
    "sass": "^1.17.2",
    "sass-loader": "^7.1.0",
    "shelljs": "^0.8.3",
    "solhint": "^2.0.0",
    "solhint-plugin-prettier": "^0.0.2",
    "truffle": "^5.0.10",
    "vue-cli-plugin-ant-design": "^1.0.0",
    "vue-template-compiler": "^2.5.21",
    "zos": "^2.2.2",
    "zos-lib": "^2.2.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.sol": [
      "solhint",
      "git add"
    ]
  }
}
